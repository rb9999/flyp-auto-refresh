{
  "manifest_version": 3,
  "name": "Flyp Orders Auto Refresh",
  "version": "1.1",
  "description": "Automatically refreshes the Flyp orders page every 30 minutes",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://tools.joinflyp.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://tools.joinflyp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
